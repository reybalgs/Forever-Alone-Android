<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent">
	<LinearLayout
	  android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">
	    <TextView 
	    	android:text="Create Profile" 
	    	android:layout_width="wrap_content" 
	    	android:textAppearance="?android:attr/textAppearanceLarge" 
	    	android:id="@+id/name" 
	    	android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
	    	android:text="It seems that you do not have a profile for Forever Alone yet! A profile is the persona you and your friends will see when you use this application. It is automatically linked to your Google account."
	    	android:id="@+id/textView1" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
	    	android:text="Your Nickname:" 
	    	android:id="@+id/textView2" 
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:layout_marginTop="10sp"
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
	    	android:text="Your nickname is the name you and your friends will see in Forever Alone. You can also change it later."
			android:id="@+id/textView4" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</TextView>
	    <EditText 
	    	android:id="@+id/editText1" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:inputType="textPersonName">
	    </EditText>
	    <TextView 
	    	android:text="University/College" 
	    	android:id="@+id/textView3" 
	    	android:layout_marginTop="24sp"
	    	android:textAppearance="?android:attr/textAppearanceMedium" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    </TextView>
	    <TextView 
	    	android:text="This is where you study. Put your university or college here to find people who go in the same place as you!" 
	    	android:id="@+id/textView5" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content">
	    </TextView>
	    <AutoCompleteTextView 
	    	android:layout_width="match_parent" 
	    	android:id="@+id/autoCompleteTextView1" 
	    	android:layout_height="wrap_content">
	    </AutoCompleteTextView>
	    <Button 
	    	android:text="Don't see your university?" 
	    	android:id="@+id/adduniversitybutton" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="8sp"
	    	android:layout_marginLeft="40sp"
	    	android:layout_marginRight="40sp"
	    	android:layout_gravity="center">
		</Button>
	    <Button 
	    	android:text="Submit" 
	    	android:id="@+id/submitprofile" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="40sp"
	    	android:ems="8"
	    	android:layout_gravity="center">
		</Button>
	    
	</LinearLayout>
</ScrollView>