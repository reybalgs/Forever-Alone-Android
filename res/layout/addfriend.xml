<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <EditText 
    	android:id="@+id/account_box" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/googleaccounttext" 
    	android:layout_alignLeft="@+id/googleaccounttext" >
        <requestFocus></requestFocus>
    </EditText>
    <TextView 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:text="Add Friends!" 
    	android:textAppearance="?android:attr/textAppearanceLarge" 
    	android:id="@+id/textView1" 
    	android:layout_alignParentTop="true" 
    	android:layout_alignLeft="@+id/googleaccounttext">
    </TextView>
    <TextView 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" 
    	android:text="Enter the Google account of your friend(s):" 
    	android:id="@+id/googleaccounttext" 
    	android:layout_below="@+id/textView1" 
    	android:layout_alignParentLeft="true">
    </TextView>
    <Button 
    	android:onClick="onClick" 
    	android:id="@+id/addfriends_searchbutton" 
    	android:layout_height="wrap_content" 
    	android:text="Search" android:layout_width="fill_parent" 
    	android:gravity="center" android:layout_below="@+id/account_box" 
    	android:layout_centerHorizontal="true">
    </Button>
</RelativeLayout>